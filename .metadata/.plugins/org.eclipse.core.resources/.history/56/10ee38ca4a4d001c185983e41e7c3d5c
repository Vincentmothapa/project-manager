
public class Project {
	
	// Attributes
	String projectNumber;
	String projectName;
	String buildingType;
	String projectAddress;
	String erfNumber;
	float projectFee;
	float amountPaid;
	String projectDeadline;
	String finalizedStatus;
	
	// Constructor
	public Project(
			String projectNumber,
			String projectName,
			String buildingType,
			String projectAddress,
			String erfNumber,
			float projectFee,
			float amountPaid,
			String projectDeadline,
			String finalizedStatus) {
		
		this.projectNumber = projectNumber;
		this.projectName = projectName;
		this.buildingType = buildingType;
		this.projectAddress = projectAddress;
		this.erfNumber = erfNumber;	
		this.projectFee = projectFee;
		this.amountPaid = amountPaid;
		this.projectDeadline = projectDeadline;
		this.finalizedStatus = finalizedStatus;
	}

	// toString method
	public String toString() {
		String output = "\nProj Number: " + projectNumber;
		output += "\nProj Name: " + projectName;
		output += "\nBuilding Type: " + buildingType;
		output += "\nProj Address: " + projectAddress;
		output += "\nERF Number: " + erfNumber;
		output += "\nProj Fee: R" + projectFee;
		output += "\nAmount Paid: R" + amountPaid;
		output += "\nProj Deadline: " + projectDeadline;
		output += "\nFinalized: " + finalizedStatus;		
		return output;
	}
}
